            <padding android:bottom="3dp" android:left="8dp" android:right="8dp" android:top="3dp" />
            <corners android:radius="12dp" />
            <solid android:color="@color/bg_button_drawable_pressed" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <padding android:bottom="3dp" android:left="8dp" android:right="8dp" android:top="3dp" />
            <corners android:radius="12dp" />
            <solid android:color="@color/bg_button_drawable_default" />
        </shape>
    </item>
</selector>